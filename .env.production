# Production Environment Configuration Template for Railway
# This file is a TEMPLATE - copy these variables to Railway dashboard
# DO NOT use this file directly in production

NODE_ENV=production

# Database Configuration (Railway PostgreSQL - set in Railway dashboard)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_NAME=${{Postgres.PGDATABASE}}

# Redis Configuration (Railway Redis - set in Railway dashboard)
REDIS_URL=${{Redis.REDIS_URL}}

# Application Configuration
PORT=3001
FRONTEND_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# Authentication (set these in Railway dashboard)
JWT_SECRET=REPLACE_WITH_ACTUAL_PRODUCTION_SECRET
JWT_EXPIRES_IN=7d
AUTH_ENABLED=true

# Email Configuration (set these in Railway dashboard)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@shoppersprint.com
SMTP_PASS=REPLACE_WITH_ACTUAL_PRODUCTION_PASSWORD
SMTP_FROM="ShopperSprint <noreply@shoppersprint.com>"

# Scraping Configuration (production optimized)
SCRAPING_DELAY=2000
MAX_CONCURRENT_SCRAPES=2
SCRAPING_TIMEOUT=45000

# Monitoring
ENABLE_MONITORING=true

# Production Security
CORS_ORIGIN=${{RAILWAY_PUBLIC_DOMAIN}}
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration (VITE_*)
VITE_API_BASE_URL=/api
VITE_BACKEND_URL=${{RAILWAY_PUBLIC_DOMAIN}}
VITE_APP_NAME=ShopperSprint
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Smart Price Tracking for Online Shopping"
VITE_DEFAULT_THEME=light
VITE_ENABLE_DEVTOOLS=false
VITE_MOCK_API=false
VITE_SITE_URL=${{RAILWAY_PUBLIC_DOMAIN}}
VITE_SITE_TITLE="ShopperSprint - Smart Price Tracking"
VITE_SITE_DESCRIPTION="Track and compare product prices across multiple online stores"

# =============================================================================
# RAILWAY DEPLOYMENT INSTRUCTIONS:
# =============================================================================
# 1. Copy these variables to Railway dashboard Variables tab
# 2. Replace REPLACE_WITH_* values with actual production secrets
# 3. Railway will automatically provide ${{Postgres.*}} and ${{Redis.*}} values
# 4. Railway will automatically provide ${{RAILWAY_PUBLIC_DOMAIN}} value
# 5. Deploy your application
# =============================================================================
