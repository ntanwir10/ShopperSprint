# Local Production Testing Environment (Docker)
# This file allows testing production setup locally with Docker
# Copy this to .env.production and modify for your needs

NODE_ENV=production

# Database Configuration (Local Docker)
DATABASE_URL=postgresql://shoppersprint:shoppersprint123@localhost:5432/shoppersprint
REDIS_URL=redis://localhost:6379

# Scraping Configuration
SCRAPING_ENABLED=true
MOCK_DATA_ENABLED=false
RATE_LIMIT_STRICT=true

# Web Scraping Settings
PUPPETEER_HEADLESS=true
PUPPETEER_SLOWMO=0

# Logging
LOG_LEVEL=info
LOG_COLORS=true

# Security (Local testing)
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FRONTEND_URL=http://localhost:5173

# JWT Configuration (Change in real production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Advertisement Configuration
AD_ENABLED=true
AD_REFRESH_INTERVAL=60000

# Scraping Configuration
SCRAPING_DELAY=2000
SCRAPING_TIMEOUT=30000

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
