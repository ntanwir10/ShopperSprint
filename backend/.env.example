# üöÄ PricePulse Backend Environment Configuration
# Copy this file to .env.development or .env.production and fill in your values

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=pricepulse
DB_PASSWORD=your_database_password
DB_NAME=pricepulse

# For production, use your hosted database URL
# DB_URL=postgresql://user:password@host:port/database

# =============================================================================
# üî¥ REDIS CONFIGURATION  
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# For production Redis
# REDIS_URL=redis://username:password@host:port

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_very_long_random_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# OAuth Configuration (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id  
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# üìß EMAIL SERVICE (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@pricepulse.com

# =============================================================================
# üåê APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# =============================================================================
# üöÄ DEPLOYMENT CONFIGURATION
# =============================================================================
# Railway deployment token (get from https://railway.app/account/tokens)
RAILWAY_TOKEN=your_railway_token_here

# =============================================================================
# üîó EXTERNAL SERVICES & APIs
# =============================================================================
# Web scraping configuration
USER_AGENT=PricePulse-Bot/1.0
SCRAPING_DELAY=1000
MAX_CONCURRENT_REQUESTS=5

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# üìä MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Sentry error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# üß™ TESTING CONFIGURATION
# =============================================================================
# Test database (for CI/CD)
DB_TEST_HOST=localhost
DB_TEST_PORT=5432
DB_TEST_USER=pricepulse
DB_TEST_PASSWORD=test_password
DB_TEST_NAME=pricepulse_test
REDIS_TEST_URL=redis://localhost:6379

# =============================================================================
# üîí SECURITY HEADERS
# =============================================================================
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# üì± NOTIFICATION SERVICES
# =============================================================================
# Push notification services (if implemented)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# =============================================================================
# üí≥ PAYMENT PROCESSING (if implemented)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# üè™ E-COMMERCE APIS (for price tracking)
# =============================================================================
# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_associate_tag

# eBay API
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# =============================================================================
# üìà ANALYTICS & TRACKING
# =============================================================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# üåç INTERNATIONALIZATION
# =============================================================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD

# =============================================================================
# üîß DEVELOPMENT TOOLS
# =============================================================================
# API documentation
SWAGGER_ENABLED=true
API_DOCS_PATH=/docs

# Development helpers
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true