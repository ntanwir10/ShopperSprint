{
  "name": "pricepulse-backend",
  "version": "1.0.0",
  "description": "Backend API for PricePulse - Product Price Tracker",
  "main": "dist/index.js",
  "scripts": {
    "//": "=== CODE QUALITY ===",
    "dev": "tsx watch src/index.ts",
    "dev:docker": "NODE_ENV=development tsx watch src/index.ts",
    "dev:neon": "NODE_ENV=production tsx watch src/index.ts",
    "build": "tsc",
    "prestart": "tsx src/scripts/check-env.ts",
    "start": "node dist/index.js",
    "prestart:production": "NODE_ENV=production tsx src/scripts/check-env.ts",
    "start:production": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/database/seed.ts",
    "db:setup:prod": "NODE_ENV=production tsx src/database/setup-production.ts",
    "db:test:prod": "./scripts/test-production-setup.sh",
    "db:reset": "echo 'Use npm run db:reset from the root directory instead'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jose": "^5.10.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "openid-client": "^5.7.1",
    "postgres": "^3.4.3",
    "puppeteer": "^21.6.1",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.18",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "drizzle-kit": "^0.20.9",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
