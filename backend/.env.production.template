# Production Environment Configuration Template
# Copy this file to .env.production and update with your actual values

NODE_ENV=production

# Database Configuration (Update with your production database credentials)
DATABASE_URL=postgresql://your_prod_user:your_prod_password@your_prod_host:5432/pricepulse_prod
REDIS_URL=redis://your_prod_redis_host:6379

# SMTP (Production email settings)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=PricePulse <no-reply@your-domain.com>

# Scraping Configuration
SCRAPING_ENABLED=true
MOCK_DATA_ENABLED=false
RATE_LIMIT_STRICT=true

# Web Scraping Settings
PUPPETEER_HEADLESS=true
PUPPETEER_SLOWMO=0

# Logging
LOG_LEVEL=info
LOG_COLORS=false

# Security (Production - Update these values)
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FRONTEND_URL=https://yourdomain.com

# JWT Configuration (CHANGE THIS IN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Advertisement Configuration
AD_ENABLED=true
AD_REFRESH_INTERVAL=60000

# Scraping Configuration
SCRAPING_DELAY=2000
SCRAPING_TIMEOUT=30000

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
ENABLE_MONITORING=true

# Optional: API Keys for professional scraping services
# SCRAPING_API_KEY=your_scraping_service_api_key
# SCRAPING_SERVICE=scrapingbee

# Optional: E-commerce API keys (if using official APIs instead of scraping)
# AMAZON_API_KEY=your_amazon_api_key
# AMAZON_SECRET_KEY=your_amazon_secret_key
# AMAZON_PARTNER_TAG=your_amazon_partner_tag
# WALMART_API_KEY=your_walmart_api_key

# OAuth (Google & Apple)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/oauth/google/callback
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
APPLE_REDIRECT_URI=https://yourdomain.com/api/auth/oauth/apple/callback

# Feature flags
# Toggle application authentication routes (/api/auth, /api/notifications)
# false = disabled (anonymous flows only), true = enabled
AUTH_ENABLED=false
