# Production Environment Configuration (Railway)
NODE_ENV=production

# Database Configuration (Railway PostgreSQL - auto-generated)
DATABASE_URL=${{Postgres.DATABASE_URL}}
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_NAME=${{Postgres.PGDATABASE}}

# Redis Configuration (Railway Redis - auto-generated)
REDIS_URL=${{Redis.REDIS_URL}}

# Application Configuration
PORT=3001
FRONTEND_URL=https://shoppersprint.com

# Authentication (generate strong production secrets)
JWT_SECRET=production_jwt_secret_replace_with_openssl_rand_base64_64
JWT_EXPIRES_IN=7d
AUTH_ENABLED=true

# Email Configuration (production emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@shoppersprint.com
SMTP_PASS=production_app_password_replace_me
SMTP_FROM="ShopperSprint <noreply@shoppersprint.com>"

# Scraping Configuration (production optimized - slower, more respectful)
SCRAPING_DELAY=2000
MAX_CONCURRENT_SCRAPES=2
SCRAPING_TIMEOUT=45000

# Monitoring
ENABLE_MONITORING=true

# Development Tools (not needed in production)
# PGADMIN_DEFAULT_EMAIL=
# PGADMIN_DEFAULT_PASSWORD=

# Frontend Configuration (VITE_*)
VITE_API_BASE_URL=/api
VITE_BACKEND_URL=https://shoppersprint.com
VITE_APP_NAME=ShopperSprint
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Smart Price Tracking for Online Shopping"
VITE_DEFAULT_THEME=light
VITE_ENABLE_DEVTOOLS=false
VITE_MOCK_API=false
VITE_SITE_URL=https://shoppersprint.com
VITE_SITE_TITLE="ShopperSprint - Smart Price Tracking"
VITE_SITE_DESCRIPTION="Track and compare product prices across multiple online stores"
