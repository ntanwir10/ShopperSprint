# ShopperSprint Environment Configuration
# Copy to .env and fill in your values

NODE_ENV=development

# Database Configuration (Docker for development)
POSTGRES_DB=shoppersprint
POSTGRES_USER=shoppersprint
POSTGRES_PASSWORD=your_secure_password

DB_HOST=localhost
DB_PORT=5432
DB_USER=shoppersprint
DB_PASSWORD=your_secure_password
DB_NAME=shoppersprint
DATABASE_URL=postgresql://shoppersprint:your_secure_password@localhost:5432/shoppersprint

# Redis Configuration (Docker for development)
REDIS_URL=redis://localhost:6379

# Application Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Authentication
JWT_SECRET=your_jwt_secret_generate_with_openssl_rand_base64_64
JWT_EXPIRES_IN=7d
AUTH_ENABLED=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="ShopperSprint <your_email@gmail.com>"

# Scraping Configuration
SCRAPING_DELAY=1000
MAX_CONCURRENT_SCRAPES=3
SCRAPING_TIMEOUT=30000

# Monitoring
ENABLE_MONITORING=true

# Development Tools (Docker)
PGADMIN_DEFAULT_EMAIL=admin@shoppersprint.com
PGADMIN_DEFAULT_PASSWORD=your_secure_password

# Frontend Configuration (VITE_*)
VITE_API_BASE_URL=/api
VITE_BACKEND_URL=http://localhost:3001
VITE_APP_NAME=ShopperSprint
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Smart Price Tracking for Online Shopping"
VITE_DEFAULT_THEME=light
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=false
VITE_SITE_URL=http://localhost:5173
VITE_SITE_TITLE="ShopperSprint - Smart Price Tracking"
VITE_SITE_DESCRIPTION="Track and compare product prices across multiple online stores"
