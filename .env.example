# üîê ShopperSprint Environment Variables Template
# Copy this file to .env and fill in your secure values

# =================== DATABASE CONFIGURATION ===================
# PostgreSQL Database Settings
POSTGRES_DB=shoppersprint
POSTGRES_USER=shoppersprint
# CRITICAL: Generate a strong password (minimum 32 characters)
POSTGRES_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# Test Database (optional, for testing)
POSTGRES_TEST_DB=shoppersprint_test

# =================== CACHE CONFIGURATION ===================
# Redis Cache Settings
# CRITICAL: Generate a strong password (minimum 32 characters)  
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE
REDIS_URL=redis://127.0.0.1:6379

# =================== AUTHENTICATION ===================
# JWT Configuration
# CRITICAL: Generate a cryptographically secure secret (minimum 64 characters)
# Use: openssl rand -base64 64
JWT_SECRET=YOUR_SUPER_SECURE_JWT_SECRET_KEY_MINIMUM_64_CHARACTERS_HERE
JWT_EXPIRES_IN=7d
SESSION_EXPIRES_IN_DAYS=7

# =================== EMAIL CONFIGURATION ===================
# SMTP Settings for Email Notifications
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@shoppersprint.com

# =================== OAUTH CONFIGURATION ===================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/oauth/google/callback

# Apple OAuth (optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key-in-pem-format
APPLE_REDIRECT_URI=http://localhost:3001/api/auth/oauth/apple/callback

# =================== APPLICATION SETTINGS ===================
# Environment
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# PgAdmin (Development only)
PGADMIN_DEFAULT_EMAIL=admin@shoppersprint.com
# CRITICAL: Change default password for production
PGADMIN_DEFAULT_PASSWORD=YOUR_SECURE_PGADMIN_PASSWORD_HERE

# =================== MONITORING (Production) ===================
# Grafana
GRAFANA_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD_HERE

# Elasticsearch
ELASTIC_PASSWORD=YOUR_SECURE_ELASTIC_PASSWORD_HERE

# =================== SECURITY NOTES ===================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate passwords regularly
# 4. Use different passwords for development and production
# 5. Consider using a secrets management service for production

# =================== PASSWORD GENERATION COMMANDS ===================
# Generate secure passwords using these commands:
# 
# For general passwords:
# openssl rand -base64 32
# 
# For JWT secrets:
# openssl rand -base64 64
# 
# For database passwords:
# openssl rand -base64 32 | tr -d "=+/" | cut -c1-32