# üé® ShopperSprint Frontend Environment Configuration
# Copy this file to .env.development or .env.production and fill in your values

# =============================================================================
# üåê API CONFIGURATION
# =============================================================================
# Backend API URL
VITE_API_URL=http://localhost:3001

# For production, use your deployed backend URL
# VITE_API_URL=https://your-app.railway.app

# =============================================================================
# üîê AUTHENTICATION
# =============================================================================
# OAuth client IDs (public values, safe to expose)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GITHUB_CLIENT_ID=your_github_client_id

# =============================================================================
# üè™ E-COMMERCE INTEGRATIONS
# =============================================================================
# Amazon affiliate tracking
VITE_AMAZON_ASSOCIATE_TAG=your_associate_tag

# =============================================================================
# üìä ANALYTICS & TRACKING
# =============================================================================
# Google Analytics (public measurement ID)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel (public token)
VITE_MIXPANEL_TOKEN=your_mixpanel_public_token

# Hotjar tracking
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# üó∫Ô∏è EXTERNAL SERVICES
# =============================================================================
# Google Maps API (if used for location-based features)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Stripe public key (safe to expose)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# =============================================================================
# üåç APPLICATION CONFIGURATION
# =============================================================================
# App metadata
VITE_APP_NAME=ShopperSprint
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Smart Price Tracking for Online Shopping

# Feature flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# üé® UI CONFIGURATION
# =============================================================================
# Theme and branding
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#64748b

# =============================================================================
# üîî NOTIFICATION SERVICES
# =============================================================================
# Firebase config for push notifications (public values)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# =============================================================================
# üåç INTERNATIONALIZATION
# =============================================================================
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de
VITE_DEFAULT_CURRENCY=USD

# =============================================================================
# üöÄ DEPLOYMENT CONFIGURATION
# =============================================================================
# Build optimization
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=true

# CDN configuration (for production)
VITE_CDN_URL=https://cdn.your-domain.com

# =============================================================================
# üß™ DEVELOPMENT & TESTING
# =============================================================================
# Development tools
VITE_ENABLE_DEVTOOLS=true
VITE_MOCK_API=false

# Testing configuration
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_MODE=false

# =============================================================================
# üîç SEO & META
# =============================================================================
VITE_SITE_URL=https://shoppersprint.com
VITE_SITE_TITLE=ShopperSprint - Smart Price Tracking
VITE_SITE_DESCRIPTION=Track and compare product prices across multiple online stores
VITE_SITE_KEYWORDS=price tracking, shopping, deals, comparison
VITE_SITE_AUTHOR=ShopperSprint Team

# Social media
VITE_TWITTER_HANDLE=@shoppersprint
VITE_FACEBOOK_APP_ID=your_facebook_app_id

# =============================================================================
# üõ°Ô∏è SECURITY
# =============================================================================
# Content Security Policy
